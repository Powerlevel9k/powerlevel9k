################################################################
# AWS Profile
prompt_aws() {
  local aws_profile="${AWS_PROFILE:-$AWS_DEFAULT_PROFILE}"

  if [[ -n "$aws_profile" ]]; then
    "__p9k_$1_prompt_segment" "$0" "$2" red white "$aws_profile" 'AWS_ICON'
  fi
}
