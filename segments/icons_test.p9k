#!/usr/bin/env zsh
# vim:ft=zsh ts=2 sw=2 sts=2 et fenc=utf-8
################################################################
# @title powerlevel9k Segment - Test Icons
# @source https://github.com/bhilburn/powerlevel9k
##

################################################################
# Register segment
# Parameters:
#   segment_name  context  foreground  background  Generic  Flat/Awesome-Patched  Awesome-FontConfig  Awesome-Mapped-FontConfig  NerdFont
#
registerSegment "ICONS_TEST" "" "${DEFAULT_COLOR_INVERTED}" "${DEFAULT_COLOR}"  "" "" "" "" ""

################################################################
# @description
#   Print some test icons in a segment.
##
# @args
#   $1 string Alignment - left | right
#   $2 integer Segment index
#   $3 boolean Whether the segment should be joined
##
prompt_icons_test() {
  local icon_string=""
  for key in ${(@k)p9k_icons}; do
    icon_string+="$p9k_icons[$key] "
  done
  p9kPrepareSegment "$0" "" $1 "$2" $3 "$icon_string"
}
