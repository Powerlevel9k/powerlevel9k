################################################################
# Register segment icon
# Parameters:
#   name_of_icon  Generic  Flat/Awesome-Patched  Awesome-FontConfig  Awesome-Mapped-FontConfig  NerdFont
#                            ðŸŒ±           ðŸŒ±           ðŸŒ±            ðŸŒ±           ï†½
registerIcon "AWS_EB_ICON"  $'\U1F331 '  $'\U1F331 '  $'\U1F331 '  $'\U1F331 '  $'\UF1BD '

################################################################
# @description
#   Display the current Elastic Beanstalk environment.
##
# @args
#   $1 string Alignment - left | right
#   $2 integer Segment index
#   $3 boolean Whether the segment should be joined
##
prompt_aws_eb_env() {
  local eb_env=$(grep environment .elasticbeanstalk/config.yml 2> /dev/null | awk '{print $2}')

  if [[ -n "$eb_env" ]]; then
    p9kPrepareSegment "$0" "" $1 "$2" $3 black green "$eb_env" 'AWS_EB_ICON'
  fi
}
